---
import BaseLayout from "@/layouts/BaseLayout.astro";

import PreviewPosts from "@/features/posts/components/PreviewPosts.astro";
import { POSTS_CONFIG } from "@/features/posts/config";

import { buttonVariants } from "@/components/ui/button";
import Container from "@/components/Container.astro";

import { SITE } from "@/config";

import { cn } from "@/lib/utils";

const pageDescription = SITE.descriptionDefault
---

<BaseLayout description={pageDescription}>
  <Container class="py-12">
    <div class="space-y-10">
      <h2 class="text-2xl font-bold">投稿一覧</h2>
      <PreviewPosts />
      <a class={cn("", buttonVariants({ variant: "outline" }))} href={POSTS_CONFIG.postsIndexSlug}
        >すべての投稿を見る</a
      >
    </div>
  </Container>
</BaseLayout>
